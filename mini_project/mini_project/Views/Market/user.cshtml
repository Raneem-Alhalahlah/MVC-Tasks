
@{
    ViewBag.Title = "user";
}




<style>

    .card {
        height: 55vh;
        width: 30vh;
    }
    .btn {
        width: 93px;
        height: 55px;
        display: flex;
        font-size: 14px;
        border: none;
        cursor: pointer;
        margin: 5px;
        text-align: center;
        line-height: 49px;
       
    }

    .btn-primary {
        background-color: #007BFF;
        color: white;
    }

    .btn-secondary {
        background-color: #6C757D;
        color: white;
    }

    .btn:hover {
        opacity: 0.8;
    }
</style>




<h2>Product</h2>

@{
    var itemList = Session["ItemList"] as List<string[]> ?? new List<string[]>();
}


<div style="display:flex">
    @foreach (var item in itemList)
    {

        <div class="card">
            <img src="@item[0]" alt="Item Image" />
            <p>Name: @item[1]</p>
            <p>Price: @item[2]</p>

            <input type="submit" value="Buy" class="btn btn-primary" />
            <input type="submit" value="Add to Cart" class="btn btn-secondary" />


        </div>

        
    }
</div>
